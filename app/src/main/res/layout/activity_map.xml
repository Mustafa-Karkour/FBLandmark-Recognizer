<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="13">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/parent_buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="2"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bt_landmark"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="3dp"
            android:layout_weight="1"
            android:background="@color/skyblue"
            android:onClick="onButtonClick"
            app:srcCompat="@drawable/landmark" />

        <ImageView
            android:id="@+id/bt_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="3dp"
            android:layout_weight="1"
            android:background="@color/greenlight"
            android:onClick="onButtonClick"
            app:srcCompat="@drawable/food" />

        <ImageView
            android:id="@+id/bt_hospital"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="3dp"
            android:layout_weight="1"
            android:background="@color/pink"
            android:onClick="onButtonClick"
            app:srcCompat="@drawable/hospital" />

        <ImageView
            android:id="@+id/bt_atm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:background="@color/yellow"
            android:onClick="onButtonClick"
            app:srcCompat="@drawable/atm" />
    </LinearLayout>
</LinearLayout>
