<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blurred_tower"
    tools:context=".MainActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLandmarkID"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginTop="104dp"
        android:drawableTop="@drawable/camera_icon"
        android:elevation="5dp"
        android:onClick="toLandmarkID"
        android:paddingTop="16dp"
        android:paddingBottom="0dp"
        android:text="Upload a picture"
        app:cornerRadius="12dp"
        app:iconPadding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnJournal"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginTop="28dp"
        android:drawableTop="@drawable/journal_icon"
        android:elevation="5dp"
        android:onClick="toJournal"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:text="Journal"
        app:cornerRadius="12dp"
        app:iconPadding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLandmarkID" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNearby"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginTop="28dp"
        android:drawableTop="@drawable/map_icon"
        android:elevation="5dp"
        android:onClick="toNearby"
        android:paddingTop="-10dp"
        android:paddingBottom="8dp"
        android:text="Nearby Places"
        app:cornerRadius="12dp"
        app:iconPadding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnJournal" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSignOut"
        android:layout_width="75dp"
        android:layout_height="33dp"
        android:layout_marginTop="152dp"
        android:onClick="signOut"
        android:padding="0sp"
        android:text="Sign Out"
        android:textSize="12sp"
        android:textAlignment="center"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNearby" />
</androidx.constraintlayout.widget.ConstraintLayout>